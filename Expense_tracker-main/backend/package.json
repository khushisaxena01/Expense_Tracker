  "description": "Secure expense tracker backend API with enterprise security",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development VERBOSE_LOGGING=true nodemon server.js",
    "debug": "NODE_ENV=development DEBUG_MODE=true VERBOSE_LOGGING=true nodemon --inspect server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
